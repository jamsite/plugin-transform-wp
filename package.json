{
  "name": "@jamsite/plugin-transform-wp",
  "version": "0.0.3",
  "description": "Jamsite plugin transforming Wordpress site json data.",
  "main": "./lib",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "lint": "standard --verbose *.js **/*.js | snazzy",
    "test:ava": "nyc ava",
    "test": "npm run lint",
    "preversion": "npm test"
  },
  "keywords": [
    "jamstack",
    "jamstack-plugin",
    "transform-wp"
  ],
  "author": "Aleksandr Tsertkov <tsertkov@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "ava": "^2.4.0",
    "nyc": "^15.0.0",
    "snazzy": "^8.0.0",
    "standard": "^14.3.1"
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamsite/plugin-transform-wp.git"
  },
  "bugs": {
    "url": "https://github.com/jamsite/plugin-transform-wp/issues"
  },
  "homepage": "https://github.com/jamsite/plugin-transform-wp#readme"
}
